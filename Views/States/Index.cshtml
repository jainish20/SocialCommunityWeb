@model IEnumerable<communityWeb.Models.State>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input class="form-control d-inline w-25" type="text" name="SearchString" value="@ViewBag.CurrentFilter" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<div class="card shadow mb-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
                @if (ViewBag.totalItems != 0)
                {
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td align="center">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
                    }
                    else
                    {
                    <tr>
                        <td>

                            <h1>No data to show</h1>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (ViewBag.totalItems > ViewBag.pageSize)
    {
        <div class="w-100 mb-3 d-flex justify-content-around">

            @if (ViewBag.page == 1)
            {

                <a class=" opacity-0" style="z-index:-1;"></a>
                <a class="btn btn-primary" href='@Url.Action("Index", "States", new { page = ViewBag.page + 1,searchString = ViewBag.CurrentFilter })'>Next &raquo;</a>
            }

            else if (ViewBag.page != ViewBag.totalPage)
            {
                <a class="btn btn-primary" href='@Url.Action("Index", "States", new { page = ViewBag.page - 1,searchString = ViewBag.CurrentFilter  })'>&laquo; Previous</a>
                <a class="btn btn-primary" href='@Url.Action("Index", "States", new { page = ViewBag.page + 1 ,searchString = ViewBag.CurrentFilter })'>Next &raquo;</a>
            }

            else if (ViewBag.page == ViewBag.totalPage)
            {
                <a class="btn btn-primary" href='@Url.Action("Index", "States", new { page = ViewBag.page - 1,searchString = ViewBag.CurrentFilter  })'>&laquo; Previous</a>
                <a class=" opacity-0" style="z-index:-1;"></a>

            }
        </div>
    }

</div>
